//-----------------------ESTRUCTURAS------------------------------
//---------REGISTRO NIÃ‘@------------------

typedef struct ListaR ListaRegistro;
typedef struct NodoR NodoR;

struct NodoR
{
  int identificacion;
  char nombre[50];
  char N_usuario[50];
  char lugar[50];
  char correo[50];
  char fecha_nacimiento[15];
  int edad;
  char necesidades_especiales[100];
  
	Nodo *siguiente;
	Nodo *anterior; 
};

struct ListaR
{
	Nodo *inicio;
	Nodo *final;
};


//---------REGISTRO AYUDANTE------------------
typedef struct ListaA ListaAyudante;
typedef struct NodoA NodoR;

struct NodoA
{
  int identificacion;
  char nombre[50];
  char puesto[50];
  char funcion[50];
  char fecha_inicio[15];
  
	Nodo *siguiente;
	Nodo *anterior; 
};

struct ListaA
{
	Nodo *inicio;
	Nodo *final;
};


